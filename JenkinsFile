pipeline {
    agent any

    // triggers {
    //     pollSCM('*/3 * * * *')
    // }
    parameters {
        string(name: 'version', defaultValue: '')
    }

    stages {
        // 레포지토리를 다운로드 받음
        stage('Repository Prepare') {
            agent any
            steps {
                echo 'Clonning Repository'
                checkout scm
            }

            post {
                // If Maven was able to run the tests, even if some of the test
                // failed, record the test results and archive the jar file.
                success {
                    echo 'Successfully Cloned Repository'
                }
                always {
                    echo "i tried..."
                }
                cleanup {
                    echo "after all other post condition"
                }
            }
        }

        stage('Build version') {
            agent any
            steps {
                script {
                    def temp = sh( returnStatus: true, script: "cat build.gradle | grep -o 'version = [^,]*'" )
                    params.version = temp.toString().trim()
                    echo "** version: ${params.version} **"
                }
            }
        }  

        stage('Bulid gradle & Image') {
            agent any
            steps {
                echo 'Build Backend'
                dir ('./'){
                    sh """
                    echo final version: ${params.version}

                    chmod +x gradlew
                    ./gradlew clean build
                    ls -al ./build

                    sudo docker build -t healthcare.kr.ncr.ntruss.com/pipeline-docker-image -f DockerFile .
                    """
                }
            }

            post {
                success {
                    echo 'Successfully Image Build'
                }

                failure {
                  error 'This pipeline stops here...'
                }
            }
        }

        stage('Push Image') {
            steps {
                echo 'registry push'
            }
            
            // docker.withRegistry('YOUR_REGISTRY', 'YOUR_CREDENTIAL') {
            //     app.push("${env.BUILD_NUMBER}")
            //     app.push("latest")
            // }
        }
    }
}
